{
	"name": "firebase-svelte",
	"version": "3.0.0-next.1",
	"description": "Integrate Svelte stores with Firebase easily.",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./*": "./dist/*"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"peerDependencies": {
		"firebase": ">=10.0.0",
		"svelte": ">=3.54.0"
	},
	"devDependencies": {
		"@docsearch/css": "^3.5.2",
		"@docsearch/js": "^3.5.2",
		"@formkit/auto-animate": "^0.8.1",
		"@kesval/design": "^4.1.2",
		"@sveltejs/adapter-auto": "^2.1.1",
		"@sveltejs/kit": "^1.27.6",
		"@sveltejs/package": "^2.2.2",
		"@types/prismjs": "^1.26.3",
		"@typescript-eslint/eslint-plugin": "^6.11.0",
		"@typescript-eslint/parser": "^6.11.0",
		"autoprefixer": "^10.4.16",
		"bits-ui": "^0.9.8",
		"clsx": "^2.0.0",
		"eslint": "^8.54.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.35.0",
		"lucide-svelte": "^0.292.0",
		"mdsvex": "^0.11.0",
		"postcss": "^8.4.31",
		"postcss-load-config": "^4.0.1",
		"prettier": "^3.1.0",
		"prettier-plugin-svelte": "^3.1.0",
		"prettier-plugin-tailwindcss": "^0.5.7",
		"prismjs": "^1.29.0",
		"publint": "^0.2.5",
		"sass": "^1.69.5",
		"svelte": "5.0.0-next.8",
		"svelte-check": "^3.6.0",
		"tailwind-merge": "^2.0.0",
		"tailwind-variants": "^0.1.18",
		"tailwindcss": "^3.3.5",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^5.0.0",
		"vite-plugin-kit-routes": "^0.0.11"
	},
	"svelte": "./dist/index.js",
	"type": "module",
	"author": {
		"email": "jabeddou@gmail.com",
		"name": "KesvaL",
		"url": "https://kesval.com"
	},
	"keywords": [
		"firebase",
		"svelte",
		"firebase-svelte",
		"stores",
		"sveltekit",
		"firestore",
		"realtime",
		"database",
		"auth",
		"authentication",
		"remote-config",
		"remote config",
		"storage"
	],
	"homepage": "https://firebase-svelte.vercel.app",
	"bugs": {
		"url": "https://github.com/xKesvaL/firebase-svelte/issues",
		"email": "jabeddou@gmail.com"
	},
	"repository": {
		"url": "https://github.com/xKesvaL/firebase-svelte.git",
		"type": "git"
	}
}
