{
	"name": "firebase-svelte",
	"version": "2.0.1",
	"description": "Integrate Svelte stores with Firebase easily.",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./*": "./dist/*"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"peerDependencies": {
		"firebase": ">=10.0.0",
		"svelte": ">=3.54.0"
	},
	"devDependencies": {
		"@docsearch/css": "3",
		"@docsearch/js": "3",
		"@formkit/auto-animate": "^0.8.0",
		"@kesval/design": "^4.1.2",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.25.1",
		"@sveltejs/package": "^2.2.2",
		"@types/prismjs": "^1.26.1",
		"@typescript-eslint/eslint-plugin": "^6.7.3",
		"@typescript-eslint/parser": "^6.7.3",
		"autoprefixer": "^10.4.14",
		"bits-ui": "^0.5.7",
		"clsx": "^2.0.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.30.0",
		"lucide-svelte": "^0.279.0",
		"mdsvex": "^0.11.0",
		"postcss": "^8.4.24",
		"postcss-load-config": "^4.0.1",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"prettier-plugin-tailwindcss": "^0.5.4",
		"prismjs": "^1.29.0",
		"publint": "^0.2.3",
		"sass": "^1.65.1",
		"svelte": "^4.2.1",
		"svelte-check": "^3.5.2",
		"tailwind-merge": "^1.14.0",
		"tailwind-variants": "^0.1.14",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.9"
	},
	"svelte": "./dist/index.js",
	"type": "module",
	"author": {
		"email": "jabeddou@gmail.com",
		"name": "KesvaL",
		"url": "https://kesval.com"
	},
	"keywords": [
		"firebase",
		"svelte",
		"firebase-svelte",
		"stores",
		"sveltekit",
		"firestore",
		"realtime",
		"database",
		"auth",
		"authentication",
		"remote-config",
		"remote config",
		"storage"
	],
	"homepage": "https://firebase-svelte.vercel.app",
	"bugs": {
		"url": "https://github.com/xKesvaL/firebase-svelte/issues",
		"email": "jabeddou@gmail.com"
	},
	"repository": {
		"url": "https://github.com/xKesvaL/firebase-svelte.git",
		"type": "git"
	}
}
